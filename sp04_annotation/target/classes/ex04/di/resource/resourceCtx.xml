	<!-- resourceCtx.xml -->
	<context:annotation-config/> <!-- 자동으로 annotation에 필요한 클래스를 자동 로드-->
	
	<bean id="r1" name="reord1, x" class="ex04.di.resource.Recorder"/>
	<bean id="r2" name="reord2, y" class="ex04.di.resource.Recorder"/>
	<bean id="r3" name="reord3, z" class="ex04.di.resource.Recorder"/>
	
	<bean id="monitorViewer" class="ex04.di.resource.MonitorViewer"/>
